<h4>Press 'save' once you've made your changes</h4>

  <form {{action "save" on="submit"}}>
  <label for="name">Project Title:</label>
  {{input placeholder="Give it a working title"
          type="text"
          id="name"
          value=project.name}}

  <label for="genre">Type:</label>
  {{input placeholder="What medium? eg. dance, silks, music"
          type="text"
          id="genre"
          value=project.genre}}

  <label for="description">Description:</label><br>
  {{input placeholder="If made public, this is the description others will see"
          id="description"
          type="text"
          value=project.description}} <br>

  <label for="targetFinish">Target Finish:</label>
  <p>Set a goal date for completion</p>
  {{input type="date"
          id="targetFinish"
          value=project.targetFinish}}

<button type="submit" class="btn btn-primary">
  Save</button>


<button {{action "cancel"}} class="btn btn-primary">
  Cancel</button>
</form> <br>
