
<form {{action "newItem" on="submit"}}>
  {{input placeholder="New task"
          class="input-group form-control"
          value=form.content}}
</form>

{{id}}
{{notebook.name}}

<h4>To Do</h4>
<ul>
  {{#each notebook.items as |item|}}
    {{#unless item.done}}
    {{notebook-main/task-store item=item}}
    {{/unless}}
  {{/each}}
</ul>

<h4>Completed</h4>
<ul>
  {{#each notebook.items as |item|}}
    {{#if item.done}}
    {{notebook-main/task-store item=item}}
    {{/if}}
  {{/each}}
</ul>
