<nav class="navbar navbar-default">
  <div class="container-fluid">
    {{navbar-header}}

    <div class="collapse navbar-collapse" id="navigation">
      <ul class="nav navbar-nav">
        {{#if isAuthenticated}}
        <li><a href="profiles" {{action "seeProfile"}}>Profile</a></li>
        {{/if}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if isAuthenticated}}
        <li>{{#link-to "change-password"}}Change Password{{/link-to}}</li>
        <li><a href="#" {{action "signOut"}}>Sign Out</a></li>
        {{else}}
        <li>{{#link-to "sign-up"}}Sign Up{{/link-to}}</li>
        <li>{{#link-to "sign-in"}}Sign In{{/link-to}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

{{yield}}

<h1>Encore!</h1>
<div>
  <ul>
    {{#if isAuthenticated}}
      <li>New Project</li>
      <li>{{#link-to 'projects'}}All Projects{{/link-to}}</li>
      <li>In Progress Projects</li>
      <li>Completed Projects</li>
    {{/if}}
  </ul>
  <h2>All Projects</h2>
</div>

{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

